{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.1.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "@types/express": "^4.17.15"
  },
  "compilerOptions": {
    "target": "ES6", // JavaScript 대상 버전
    "module": "CommonJS", // 모듈 시스템
    "strict": true, // 엄격한 타입 검사
    "esModuleInterop": true, // ES 모듈 호환성
    "skipLibCheck": true, // 라이브러리 타입 체크 건너뛰기
    "outDir": "./dist", // 컴파일된 파일 출력 폴더
    "rootDir": "./src" // 소스 파일의 루트 디렉토리
  },
  "include": ["src/**/*"], // 포함할 파일
  "exclude": ["node_modules"] // 제외할 파일
}
